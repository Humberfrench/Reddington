<!-- Edição Modal -->
@Html.AntiForgeryToken()
<div id="modalEdicao" class="modal inmodal in" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content animated flipInY">
            <div class="modal-header success-element">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="gridSystemModalLabel">Usuário</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-2"><label id="labelCodigo" for="UsuarioId">Código</label></div>
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-7"><input type="text" id="UsuarioId" name="UsuarioId" value="" readonly="readonly" class="form-control" /></div>
                    <div class="col-md-1">&nbsp;</div>
                </div>
                <div class="row">&nbsp;</div>
                <div class="row">
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-2"><label id="labelLoginAD" for="LoginAD">Login A.D.</label></div>
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-7">
                        <div class="input-group">
                            <input type="text" id="LoginAD" name="LoginAD" value="" class="form-control" placeholder="Login no A.D." />
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-danger" id="ValidarUsuarioAD">
                                    <i class="glyphicon glyphicon-ok"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-1">&nbsp;</div>
                </div>
                <div class="row">&nbsp;</div>
                <div class="row">
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-2"><label id="labelNome" for="Nome">Nome</label></div>
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-7"><input type="text" id="Nome" name="Nome" value="" class="form-control" placeholder="Nome do Usuário" /></div>
                    <div class="col-md-1">&nbsp;</div>
                </div>
                <div class="row">&nbsp;</div>
                <div class="row">
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-2"><label id="labelDominio" for="Dominio">Domínio</label></div>
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-7"><input type="text" id="Dominio" name="Dominio" value="" class="form-control" placeholder="Domínio" /></div>
                    <div class="col-md-1">&nbsp;</div>
                </div>
                <div class="row">&nbsp;</div>
                <div class="row">
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-2"><label id="labelPerfil" for="Perfil">Perfil</label></div>
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-7">
                        @Html.DropDownList("Perfil", perfilList, new { @id = "Perfil", @class = "form-control m-b" })
                    </div>
                    <div class="col-md-1">&nbsp;</div>
                </div>
                <div class="row">&nbsp;</div>
                <div class="row">
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-2"><label id="labelStatus" for="Status">Situação</label></div>
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-7">
                        <select class="form-control m-b" name="Status" id="Status">
                            <option value="-1">Todos</option>
                            <option value="1">Ativo</option>
                            <option value="0">Inativo</option>
                        </select>
                    </div>
                    <div class="col-md-1">&nbsp;</div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">
                    <i class="glyphicon glyphicon-remove"></i>Fechar
                </button>
                <button type="button" class="btn btn-primary" id="Gravar">
                    <i class="glyphicon glyphicon-floppy-disk"></i>Gravar
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
