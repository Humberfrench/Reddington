@Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
@Styles.Render("~/plugins/dataPickerStyles")
@Styles.Render("~/plugins/jasnyBootstrapStyles")
@Styles.Render("~/plugins/awesomeCheckboxStyles")
@{
    ViewBag.Title = "Alunos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var disabled = "";
    IEnumerable<SelectListItem> listaEvangelizador = ViewBag.Evangelizador as IEnumerable<SelectListItem>;
    IEnumerable<SelectListItem> anoLista = ViewBag.Ano as IEnumerable<SelectListItem>;
}

<input type="hidden" name="URLObterTodos" id="URLObterTodos" value="@Url.Action("Index")" />
<input type="hidden" name="URLEdit" id="URLEdit" value="@Url.Action("Edit")" />
<input type="hidden" name="URLGravar" id="URLGravar" value="@Url.Action("Gravar")" />
<input type="hidden" name="URLExcluir" id="URLExcluir" value="@Url.Action("Excluir")" />
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Turmas Moral Cristã</h5>
                    <div class="ibox-tools">
                        <button type="button" id="AdicionarAluno" name="AdicionarAluno"
                                class="btn btn-primary btn-lg"
                                data-toggle="tooltip" data-placement="top"
                                title="Adicionar Aluno">
                            <i class="glyphicon glyphicon-file"></i>Adicionar Aluno
                        </button>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-1">&nbsp;</div>
                        <div class="col-md-2"><label id="labelNome">Evangelizador:</label></div>
                        <div class="col-md-8">
                            @Html.DropDownList("Evangelizador", listaEvangelizador, new { @id = "Evangelizador", @class = "form-control m-b" })
                        </div>
                        <div class="col-md-1">&nbsp;</div>
                    </div>
                    <div class="row">
                        <div class="col-md-1">&nbsp;</div>
                        <div class="col-md-2"><label id="labelDescricao" for="Descricao">Nome da Turma:</label></div>
                        <div class="col-md-8">
                            <input type="hidden" id="TurmaId" name="TurmaId" value="" />
                            <input type="text" id="Descricao" name="Descricao" value="" class="form-control m-b-md" />
                        </div>
                        <div class="col-md-1">&nbsp;</div>
                    </div>
                    <div class="row">
                        <div class="col-md-1">&nbsp;</div>
                        <div class="col-md-2"><label id="labeAno" for="Ano">Ano:</label></div>
                        <div class="col-md-4">
                            <select name="Ano" id="Ano" class="form-control m-b">
                                <option value="2014">2014</option>
                                <option value="2015">2015</option>
                                <option value="2016">2016</option>
                                <option value="2017">2017</option>
                                <option value="2018">2018</option>
                                <option value="2019">2019</option>
                                <option value="2020">2020</option>
                            </select>
                        </div>
                        <div class="row col-md-2">
                            <button type="button" class="btn btn-primary" id="Pesquisar">
                                <i class="glyphicon glyphicon-search"></i>Pesquisar
                            </button>
                        </div>
                        <div class="row col-md-2">
                            <button type="button" class="btn btn-primary" id="Gravar">
                                <i class="glyphicon glyphicon-floppy-disk"></i>Gravar
                            </button>
                        </div>
                        <div class="col-md-1">&nbsp;</div>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row col-lg-12 col-md-12">&nbsp;</div>
                    <div id="divTurmas"></div>
                </div>
            </div>
        </div>
    </div>
</div> 
<!--partial-->
@Html.Partial("AlunosLivres");
@section scripts
{
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/Moment")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/script/Turmas/main")
}
